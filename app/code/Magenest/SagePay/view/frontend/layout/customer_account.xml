<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="customer_account_navigation">
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="customer-account-navigation-sagepay-profiles">
                <arguments>
                    <argument name="path" xsi:type="string">sagepay/customer/profile/</argument>
                    <argument name="label" xsi:type="string" translate="true">SagePay Subscription Profiles</argument>
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="customer-account-navigation-sagepay-cards">
                <arguments>
                    <argument name="path" xsi:type="string">sagepay/customer/card/</argument>
                    <argument name="label" xsi:type="string" translate="true">SagePay Card Management</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
