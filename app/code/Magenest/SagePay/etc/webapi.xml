<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/sagepay/get3DInfo" method="POST">
        <service class="Magenest\SagePay\Api\ThreeDInfo" method="get3DInfo"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/sagepay/buildForm/" method="POST">
        <service class="Magenest\SagePay\Api\BuildForm" method="buildFormSubmit"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>