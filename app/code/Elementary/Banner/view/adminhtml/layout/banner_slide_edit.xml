<?xml version="1.0" encoding="UTF-8"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="formkey"/>
    <head>
        <title>Slide</title>
    </head>
    <body>
        <referenceBlock name="menu">
            <action method="setActive">
                <argument name="itemId" xsi:type="string">Elementary_Banner::banner</argument>
            </action>
        </referenceBlock>
        <referenceBlock name="page.title">
            <action method="setPageTitle">
                <argument name="pageTitle" xsi:type="string">Slide</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Elementary\Banner\Block\Adminhtml\Slide\Edit" name="slide_edit"/>
        </referenceContainer>
        <referenceContainer name="left">
            <block class="Elementary\Banner\Block\Adminhtml\Slide\Edit\Tabs" name="slide_edit_tabs"/>
        </referenceContainer>
    </body>
</page>
