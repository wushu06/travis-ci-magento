<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd"
      class="Aheadworks\Rma\Ui\Component\Request\Form">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">aw_rma_request_form.aw_rma_request_form_data_source</item>
            <item name="deps" xsi:type="string">aw_rma_request_form.aw_rma_request_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Manage Request</item>
        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">data</item>
            <item name="namespace" xsi:type="string">aw_rma_request_form</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
        <item name="buttons" xsi:type="array">
            <item name="back" xsi:type="string">Aheadworks\Rma\Block\Adminhtml\Request\Edit\Button\Back</item>
            <item name="reset" xsi:type="string">Aheadworks\Rma\Block\Adminhtml\Request\Edit\Button\Reset</item>
            <item name="printLabel" xsi:type="string">Aheadworks\Rma\Block\Adminhtml\Request\Edit\Button\PrintLabel</item>
            <item name="saveAndContinue" xsi:type="string">Aheadworks\Rma\Block\Adminhtml\Request\Edit\Button\SaveAndContinue</item>
            <item name="save" xsi:type="string">Aheadworks\Rma\Block\Adminhtml\Request\Edit\Button\Save</item>
        </item>
    </argument>
    <dataSource name="aw_rma_request_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Aheadworks\Rma\Ui\DataProvider\Request\FormDataProvider</argument>
            <argument name="name" xsi:type="string">aw_rma_request_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="submit_url" xsi:type="url" path="aw_rma_admin/rma/save"/>
                </item>
            </argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
    </dataSource>
    <modal name="aw_rma_request_order_listing_modal">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="dataScope" xsi:type="string"/>
                <item name="options" xsi:type="array">
                    <item name="title" xsi:type="string" translate="true">Select Order</item>
                    <item name="buttons" xsi:type="array">
                        <item name="0" xsi:type="array">
                            <item name="text" xsi:type="string" translate="true">Cancel</item>
                            <item name="actions" xsi:type="array">
                                <item name="0" xsi:type="string">closeModal</item>
                            </item>
                        </item>
                        <item name="1" xsi:type="array">
                            <item name="text" xsi:type="string" translate="true">Add Selected Order</item>
                            <item name="class" xsi:type="string">action-primary</item>
                            <item name="actions" xsi:type="array">
                                <item name="0" xsi:type="array">
                                    <item name="targetName" xsi:type="string">index = aw_rma_request_order_listing</item>
                                    <item name="actionName" xsi:type="string">save</item>
                                </item>
                                <item name="1" xsi:type="string">closeModal</item>
                            </item>
                        </item>
                    </item>
                </item>
            </item>
        </argument>
        <insertListing name="aw_rma_request_order_listing">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="cssclass" xsi:type="string">aw-rma__sales-order-grid</item>
                    <item name="autoRender" xsi:type="boolean">false</item>
                    <item name="dataScope" xsi:type="string">sales_order_selected</item>
                    <item name="externalProvider" xsi:type="string">${ $.ns }.aw_rma_request_order_listing_data_source</item>
                    <item name="selectionsProvider" xsi:type="string">${ $.ns }.aw_rma_request_order_listing.order_columns.ids</item>
                    <item name="ns" xsi:type="string">aw_rma_request_order_listing</item>
                    <item name="realTimeLink" xsi:type="boolean">true</item>
                    <item name="dataLinks" xsi:type="array">
                        <item name="imports" xsi:type="boolean">false</item>
                        <item name="exports" xsi:type="boolean">true</item>
                    </item>
                    <item name="behaviourType" xsi:type="string">simple</item>
                    <item name="externalFilterMode" xsi:type="boolean">false</item>
                </item>
            </argument>
        </insertListing>
    </modal>
    <container name="order_data_downloader">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="component" xsi:type="string">Aheadworks_Rma/js/ui/form/element/order-data-downloader</item>
                <item name="url" xsi:type="url" path="aw_rma_admin/rma/downloadOrderData"/>
                <item name="map" xsi:type="array">
                    <item name="order_id" xsi:type="string">order_id</item>
                    <item name="store_id" xsi:type="string">store_id</item>
                    <item name="order_items_selected" xsi:type="string">order_items</item>
                    <item name="order_increment_id" xsi:type="string">order_increment_id</item>
                    <item name="increment_id" xsi:type="string">increment_id</item>
                    <item name="order_increment_id_label" xsi:type="string">order_increment_id_label</item>
                    <item name="order_increment_id_url" xsi:type="string">order_increment_id_url</item>
                    <item name="customer_address" xsi:type="string">customer_address</item>
                    <item name="customer_id" xsi:type="string">customer_id</item>
                    <item name="customer_email" xsi:type="string">customer_email</item>
                    <item name="customer_name" xsi:type="string">customer_name</item>
                    <item name="customer_name_label" xsi:type="string">customer_name_label</item>
                    <item name="customer_name_url" xsi:type="string">customer_name_url</item>
                    <item name="canned_response_options" xsi:type="string">canned_response_options</item>
                </item>
                <item name="mapExcludeAfterError" xsi:type="array">
                    <item name="0" xsi:type="string">order_items_selected</item>
                </item>
                <item name="switcherConfig" xsi:type="array">
                    <item name="enabled" xsi:type="boolean">true</item>
                    <item name="rules" xsi:type="array">
                        <item name="0" xsi:type="array">
                            <item name="value" xsi:type="boolean">false</item>
                            <item name="actions" xsi:type="array">
                                <item name="0" xsi:type="array">
                                    <item name="target" xsi:type="string">${ $.ns }.${ $.ns }.general_information.select_order</item>
                                    <item name="callback" xsi:type="string">show</item>
                                </item>
                                <item name="1" xsi:type="array">
                                    <item name="target" xsi:type="string">${ $.ns }.${ $.ns }.general_information.order_increment_id</item>
                                    <item name="callback" xsi:type="string">hide</item>
                                </item>
                                <item name="2" xsi:type="array">
                                    <item name="target" xsi:type="string">${ $.ns }.${ $.ns }.products.order_items_label</item>
                                    <item name="callback" xsi:type="string">show</item>
                                </item>
                                <item name="3" xsi:type="array">
                                    <item name="target" xsi:type="string">${ $.ns }.${ $.ns }.products.order_items_container</item>
                                    <item name="callback" xsi:type="string">hide</item>
                                </item>
                                <item name="4" xsi:type="array">
                                    <item name="target" xsi:type="string">${ $.ns }.${ $.ns }.customer_information.customer_information_label</item>
                                    <item name="callback" xsi:type="string">show</item>
                                </item>
                                <item name="5" xsi:type="array">
                                    <item name="target" xsi:type="string">${ $.ns }.${ $.ns }.customer_information.customer_information_container</item>
                                    <item name="callback" xsi:type="string">hide</item>
                                </item>
                                <item name="6" xsi:type="array">
                                    <item name="target" xsi:type="string">${ $.ns }.${ $.ns }.custom_fields_management</item>
                                    <item name="callback" xsi:type="string">showIsAvailable</item>
                                </item>
                            </item>
                        </item>
                        <item name="1" xsi:type="array">
                            <item name="value" xsi:type="boolean">true</item>
                            <item name="actions" xsi:type="array">
                                <item name="0" xsi:type="array">
                                    <item name="target" xsi:type="string">${ $.ns }.${ $.ns }.general_information.select_order</item>
                                    <item name="callback" xsi:type="string">hide</item>
                                </item>
                                <item name="1" xsi:type="array">
                                    <item name="target" xsi:type="string">${ $.ns }.${ $.ns }.general_information.order_increment_id</item>
                                    <item name="callback" xsi:type="string">show</item>
                                </item>
                                <item name="2" xsi:type="array">
                                    <item name="target" xsi:type="string">${ $.ns }.${ $.ns }.products.order_items_label</item>
                                    <item name="callback" xsi:type="string">hide</item>
                                </item>
                                <item name="3" xsi:type="array">
                                    <item name="target" xsi:type="string">${ $.ns }.${ $.ns }.products.order_items_container</item>
                                    <item name="callback" xsi:type="string">show</item>
                                </item>
                                <item name="4" xsi:type="array">
                                    <item name="target" xsi:type="string">${ $.ns }.${ $.ns }.customer_information.customer_information_label</item>
                                    <item name="callback" xsi:type="string">hide</item>
                                </item>
                                <item name="5" xsi:type="array">
                                    <item name="target" xsi:type="string">${ $.ns }.${ $.ns }.customer_information.customer_information_container</item>
                                    <item name="callback" xsi:type="string">show</item>
                                </item>
                                <item name="6" xsi:type="array">
                                    <item name="target" xsi:type="string">${ $.ns }.${ $.ns }.custom_fields_management</item>
                                    <item name="callback" xsi:type="string">showIsAvailable</item>
                                </item>
                            </item>
                        </item>
                    </item>
                </item>
                <item name="imports" xsi:type="array">
                    <item name="downloadState" xsi:type="string">${ $.provider }:data.editRequest</item>
                </item>
            </item>
        </argument>
    </container>
    <container name="custom_fields_management">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="componentType" xsi:type="string">container</item>
                <item name="component" xsi:type="string">Aheadworks_Rma/js/ui/form/components/custom-fields-management</item>
            </item>
        </argument>
    </container>
    <fieldset name="general_information">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string" translate="true">General Information</item>
                <item name="collapsible" xsi:type="boolean">true</item>
                <item name="sortOrder" xsi:type="number">10</item>
                <item name="opened" xsi:type="boolean">true</item>
            </item>
        </argument>
        <field name="id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="visible" xsi:type="boolean">false</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">request</item>
                    <item name="dataScope" xsi:type="string">id</item>
                </item>
            </argument>
        </field>
        <field name="status_id">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Aheadworks\Rma\Model\Source\Request\Status</item>
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Status</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="source" xsi:type="string">request</item>
                    <item name="dataScope" xsi:type="string">status_id</item>
                    <item name="elementTmpl" xsi:type="string">Aheadworks_Rma/ui/form/element/label</item>
                    <item name="imports" xsi:type="array">
                        <item name="visible" xsi:type="string">${ $.provider }:data.editRequest</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="request_last_update" class="Aheadworks\Rma\Ui\Component\Form\Request\Date">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Last Update</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">request</item>
                    <item name="dataScope" xsi:type="string">updated_at</item>
                    <item name="elementTmpl" xsi:type="string">Aheadworks_Rma/ui/form/element/label</item>
                    <item name="imports" xsi:type="array">
                        <item name="visible" xsi:type="string">${ $.provider }:data.editRequest</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="order_increment_id" class="Aheadworks\Rma\Ui\Component\Form\Request\OrderInfo">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Order</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">request</item>
                    <item name="dataScope" xsi:type="string">order_increment_id</item>
                    <item name="component" xsi:type="string">Aheadworks_Rma/js/ui/form/element/label-url</item>
                    <item name="imports" xsi:type="array">
                        <item name="visible" xsi:type="string">${ $.provider }:data.editRequest</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="select_order">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="label" xsi:type="string" translate="true">Order</item>
                    <item name="labelVisible" xsi:type="boolean">true</item>
                    <item name="additionalClasses" xsi:type="string">admin__field-small</item>
                    <item name="component" xsi:type="string">Aheadworks_Rma/js/ui/form/components/button</item>
                    <item name="template" xsi:type="string">ui/form/components/button/container</item>
                    <item name="title" xsi:type="string" translate="true">Select Order</item>
                    <item name="actions" xsi:type="array">
                        <item name="0" xsi:type="array">
                            <item name="targetName" xsi:type="string">${ $.ns }.${ $.ns }.aw_rma_request_order_listing_modal</item>
                            <item name="actionName" xsi:type="string">toggleModal</item>
                        </item>
                        <item name="1" xsi:type="array">
                            <item name="targetName" xsi:type="string">${ $.ns }.${ $.ns }.aw_rma_request_order_listing_modal.aw_rma_request_order_listing</item>
                            <item name="actionName" xsi:type="string">render</item>
                        </item>
                    </item>
                    <item name="imports" xsi:type="array">
                        <item name="visible" xsi:type="string">${ $.provider }:data.newRequest</item>
                    </item>
                </item>
            </argument>
        </field>
        <container name="custom_fields" class="Aheadworks\Rma\Ui\Component\Form\Request\CustomFields">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="componentType" xsi:type="string">container</item>
                </item>
            </argument>
        </container>
    </fieldset>
    <fieldset name="products">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string" translate="true">Products</item>
                <item name="collapsible" xsi:type="boolean">true</item>
                <item name="sortOrder" xsi:type="number">20</item>
                <item name="opened" xsi:type="boolean">true</item>
            </item>
        </argument>
        <field name="order_items_label">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="dataScope" xsi:type="string">order_items_label</item>
                    <item name="value" xsi:type="string" translate="true">Please select an order to configure the products.</item>
                    <item name="elementTmpl" xsi:type="string">ui/dynamic-rows/cells/text</item>
                </item>
            </argument>
        </field>
        <container name="order_items_container">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="component" xsi:type="string">Aheadworks_Rma/js/ui/show-hide-container</item>
                </item>
            </argument>
            <dynamicRows name="order_items" class="Aheadworks\Rma\Ui\Component\Form\Request\OrderItemInfo">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="componentType" xsi:type="string">dynamicRows</item>
                        <item name="label" xsi:type="string"/>
                        <item name="additionalClasses" xsi:type="string">admin__field-wide</item>
                        <item name="component" xsi:type="string">Magento_Ui/js/dynamic-rows/dynamic-rows-grid</item>
                        <item name="template" xsi:type="string">ui/dynamic-rows/templates/grid</item>
                        <item name="itemTemplate" xsi:type="string">record</item>
                        <item name="addButton" xsi:type="boolean">false</item>
                        <item name="provider" xsi:type="string">aw_rma_request_form.aw_rma_request_form_data_source</item>
                        <item name="dataProvider" xsi:type="string">${ $.dataScope }.order_items_selected</item>
                        <item name="identificationDRProperty" xsi:type="string">id_prop</item>
                        <item name="identificationProperty" xsi:type="string">id_prop</item>
                        <item name="deleteButtonLabel" xsi:type="string" translate="true">Remove</item>
                        <item name="dndConfig" xsi:type="array">
                            <item name="enabled" xsi:type="boolean">false</item>
                        </item>
                        <item name="map" xsi:type="array">
                            <item name="id_prop" xsi:type="string">id_prop</item>
                            <item name="item_id" xsi:type="string">item_id</item>
                            <item name="name_label" xsi:type="string">name_label</item>
                            <item name="name_url" xsi:type="string">name_url</item>
                            <item name="sku" xsi:type="string">sku</item>
                            <item name="price" xsi:type="string">price</item>
                            <item name="qty" xsi:type="string">qty</item>
                            <item name="qty_in_stock" xsi:type="string">qty_in_stock</item>
                            <item name="total_paid" xsi:type="string">total_paid</item>
                        </item>
                        <item name="validation" xsi:type="array">
                            <item name="required-entry" xsi:type="boolean">true</item>
                        </item>
                        <item name="links" xsi:type="array">
                            <item name="insertData" xsi:type="string">${ $.provider }:${ $.dataProvider }</item>
                        </item>
                    </item>
                </argument>
                <container name="record" class="Aheadworks\Rma\Ui\Component\Form\Request\CustomFields">
                    <argument name="data" xsi:type="array">
                        <item name="config" xsi:type="array">
                            <item name="isTemplate" xsi:type="boolean">true</item>
                            <item name="is_collection" xsi:type="boolean">true</item>
                            <item name="component" xsi:type="string">Magento_Ui/js/dynamic-rows/record</item>
                            <item name="componentType" xsi:type="string">container</item>
                            <item name="refersTo" xsi:type="string">item</item>
                            <item name="addActionDelete" xsi:type="boolean">true</item>
                        </item>
                    </argument>
                    <field name="name">
                        <argument name="data" xsi:type="array">
                            <item name="config" xsi:type="array">
                                <item name="formElement" xsi:type="string">input</item>
                                <item name="dataType" xsi:type="string">text</item>
                                <item name="dataScope" xsi:type="string">name</item>
                                <item name="fit" xsi:type="boolean">false</item>
                                <item name="label" xsi:type="string" translate="true">Product Title</item>
                                <item name="component" xsi:type="string">Aheadworks_Rma/js/ui/form/element/label-url</item>
                            </item>
                        </argument>
                    </field>
                    <field name="sku">
                        <argument name="data" xsi:type="array">
                            <item name="config" xsi:type="array">
                                <item name="formElement" xsi:type="string">input</item>
                                <item name="dataType" xsi:type="string">text</item>
                                <item name="dataScope" xsi:type="string">sku</item>
                                <item name="fit" xsi:type="boolean">false</item>
                                <item name="label" xsi:type="string" translate="true">SKU</item>
                                <item name="elementTmpl" xsi:type="string">ui/dynamic-rows/cells/text</item>
                            </item>
                        </argument>
                    </field>
                    <field name="price">
                        <argument name="data" xsi:type="array">
                            <item name="config" xsi:type="array">
                                <item name="formElement" xsi:type="string">input</item>
                                <item name="dataType" xsi:type="string">text</item>
                                <item name="dataScope" xsi:type="string">price</item>
                                <item name="fit" xsi:type="boolean">false</item>
                                <item name="label" xsi:type="string" translate="true">Product Price</item>
                                <item name="elementTmpl" xsi:type="string">ui/dynamic-rows/cells/text</item>
                            </item>
                        </argument>
                    </field>
                    <field name="qty">
                        <argument name="data" xsi:type="array">
                            <item name="config" xsi:type="array">
                                <item name="formElement" xsi:type="string">input</item>
                                <item name="dataType" xsi:type="string">text</item>
                                <item name="dataScope" xsi:type="string">qty</item>
                                <item name="fit" xsi:type="boolean">false</item>
                                <item name="label" xsi:type="string" translate="true">Qty to Return</item>
                                <item name="imports" xsi:type="array">
                                    <item name="disabled" xsi:type="string">${ $.provider }:data.editRequest</item>
                                </item>
                            </item>
                        </argument>
                    </field>
                    <field name="qty_in_stock">
                        <argument name="data" xsi:type="array">
                            <item name="config" xsi:type="array">
                                <item name="formElement" xsi:type="string">input</item>
                                <item name="dataType" xsi:type="string">text</item>
                                <item name="dataScope" xsi:type="string">qty_in_stock</item>
                                <item name="fit" xsi:type="boolean">false</item>
                                <item name="label" xsi:type="string" translate="true">Qty in Stock</item>
                                <item name="elementTmpl" xsi:type="string">ui/dynamic-rows/cells/text</item>
                            </item>
                        </argument>
                    </field>
